<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/appBackground"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="244dp"
            android:layout_height="154dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:gravity="top"
            android:id="@+id/mtNotes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarSize="2dp" android:scrollbars="horizontal|vertical"
            android:background="@color/textViewBckground"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/mtNotes">
        <Button
                android:text="@string/save"
                android:layout_width="match_parent"
                android:id="@+id/btnSave" android:layout_height="80dp"/>
        <Button
                android:text="@string/cancel"
                android:layout_width="match_parent"
                android:layout_height="80dp" android:id="@+id/btnCancel"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>