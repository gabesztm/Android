<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin"
                android:background="@android:color/holo_blue_light">

    <TextView
            android:scrollbars="horizontal|vertical"
            android:layout_width="match_parent"
            android:layout_height="384dp" android:id="@+id/tvNotes" android:scrollHorizontally="true"
            android:layout_alignParentStart="true"
            android:verticalScrollbarPosition="right"
            android:layout_marginTop="5dp" android:layout_marginStart="0dp" android:layout_below="@+id/tvTitle"/>
    <TextView
            android:text="Jegyzetek"
            android:gravity="center_vertical"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentTop="true" android:id="@+id/tvTitle" android:textAlignment="textStart"
            android:layout_marginTop="0dp" android:textStyle="bold" android:textSize="20sp"/>
