<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/screenBackground" android:id="@+id/appBG">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/randomText" android:textSize="120sp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:saveEnabled="true"/>
    <Button
            android:text="@string/throwDice"
            android:layout_width="120dp"
            android:layout_height="126dp"
            android:id="@+id/randomBtn" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/randomText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>
    <Switch
            android:text="@string/nightmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nightMode" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            android:saveEnabled="true"/>

</android.support.constraint.ConstraintLayout>